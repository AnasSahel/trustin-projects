{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "POSTGRES_URL"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": [
        "drizzle:generate",
        "drizzle:migrate"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "drizzle:push"
      ]
    },
    "drizzle:push": {
      "cache": false
    },
    "drizzle:generate": {
      "outputs": [
        "drizzle/**"
      ],
      "cache": false
    },
    "drizzle:migrate": {
      "cache": false
    }
  }
}